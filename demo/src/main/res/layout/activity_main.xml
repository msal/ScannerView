<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:app="http://schemas.android.com/apk/res-auto"
   xmlns:card_view="http://schemas.android.com/apk/res-auto"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:onClick="onScreenClicked">

   <android.support.v7.widget.CardView
      android:layout_width="176dp"
      android:layout_height="128dp"
      android:layout_centerInParent="true"
      android:layout_gravity="center"
      card_view:cardCornerRadius="4dp">

      <de.msal.scannerview.ScannerView
         android:id="@+id/scanner_view"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         app:barcodeColor="#888"
         app:barcodePaddingHorizontal="8dp"
         app:barcodePaddingVertical="4dp"
         app:maxBarcodeLineWidth="8dp"
         app:minBarcodeLineWidth="2dp"
         app:scannerColor="#aaff4444" />
   </android.support.v7.widget.CardView>

</RelativeLayout>
